	<div class="row">

		<div class="col-md-12 center">

			<h1>Surveyor: Give Me Data!</h1>

		</div>

	</div>


	<div class="row">

		<div class="col-xs-12 center">
			<p class="sub-header italic">Take a survey below or create one</p>
		</div>

	</div>


	<div class="row">

		<%= link_to "Create New Survey", new_survey_path, class: " btn btn-lg btn-primary col-xs-4 col-xs-offset-4" %>

	</div>


	<div class="col-xs-6 col-xs-offset-3">


		<% @surveys.each do | survey | %>

	  <div class="row">


					<h3 class="col-xs-12">
						<%= survey.title %>
					</h3>

		</div>

		<div class="row">

					<p class="col-xs-12">
						<%= survey.description %>
					</p>

		</div>

		<div class="row">

					<p class="col-xs-12">
						<%= total_responses( survey ) %>&nbspResponses
					</p>

		</div>


		<div class="row">

			<div class="col-xs-6"><br />
				<%= link_to "Take a Survey", take_survey_path(survey), class: "btn btn-default" %>
			</div>

			<div class="col-xs-6"><br />
				<%= link_to "View Results", survey_answers_path(survey), class: "btn btn-info" %>
			</div>

		</div>

		<% end %>

	</div>

	</div>