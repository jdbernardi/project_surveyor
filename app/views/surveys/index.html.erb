	<div class="row">

		<div class="col-md-12 center">

			<h1>Surveyor: Give Me Data!</h1>

		</div>

	</div>


	<div class="row">

		<div class="col-xs-12 center">
			<p>Click on a survey below to take or create one</p>
		</div>

	</div>


	<div class="row">

		<%= link_to "Create New Survey", new_survey_path, class: "col-xs-10 col-xs-offset-1 center btn btn-lg btn-primary" %>

	</div>





		<% @surveys.each do | survey | %>

	  <div class="row">

					<h3 class="col-xs-12">
						<%= survey.title %>
					</h3>

		</div>

		<div class="row">

					<p class="col-xs-12">
						<%= survey.description %>
					</p>

		</div>

		<div class="row">

					<p class="col-xs-12">
						<%= total_responses( survey ) %>&nbspResponses
					</p>

		</div>


		<div class="row">

			<div class="col-xs-6"><br />
				<%= link_to "Take a Survey", take_survey_path(survey) %>
			</div>

			<div class="col-xs-6"><br />
				<%= link_to "View Results", survey_answers_path(survey) %>
			</div>

		</div>

		<% end %>

	</div>