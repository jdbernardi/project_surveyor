

<div class="row">

	<h1 class="col-xs-6 center col-xs-offset-3">Survey Taker</h1>

<%= render partial: "/shared/survey_title_description" %>


	<p class='col-xs-12 grayed-out center italic'>Questions marked with an * are required.</h5>

	<div class='row'>

		<% num = 0 %>
		<% if @mcs %>
			<% @mcs.each do | mc | %>

				<div class="row">
					<% num += 1 %>
						<p class="bold col-xs-6 col-xs-offset-3 left">
							<span class="alert asterisk"><%= required?( mc ) %></span>
							<%= "#{num}." %>&nbsp&nbsp<%= mc.text %>
						</p>
				</div>

				<% mc.options.each do | opt | %>
					<div class="row">
							<p class="col-xs-6 col-xs-offset-3">&#9864&nbsp<%= opt.option_text %></p>
					</div>

				<% end %>

			<% end %>

		<% end %>

	</div>
<div class="row">
		<% @mcs.each do | mc | %>

			<%=form_for mc do | mc_fields | %>

				<div class="row">
					<p class="col-xs-12 col-xs-offset-3"><%= required?( mc ) %>1.<%= mc_fields.label mc.text %>
					</p>
			  </div>

			  <div class="row">
			  		<div class="col-xs-6 col-xs-offset-3">
						<%= mc_fields.collection_check_boxes(:option_ids, mc.options, :id, :option_text, {}, checked: false) do | b | %>
							<%= b.label class:"label-checkbox" do %>
							<%= b.check_box + b.text %>
							<% end %>
						<% end %>
					</div>
				</div>


			<% end %>

		<% end %>



</div>



