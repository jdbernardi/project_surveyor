<%= render  :partial => "/shared/survey_fields_form", survey: @survey %>

<%= render :partial => "question_types_form" %>




<div class="row">
	<h3 class="col-xs-6 col-xs-offset-3">Existing Questions</h3>
</div>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		<% num = 1 %>
		<% if @mcs %>
			<% @mcs.each do | mc | %>
				<div class="row">

					<div class="col-xs-6 col-xs-offset-3">
						<p><%= "#{num}." %><%= mc.text %></p>
					</div>
				</div>
				<% mc.options.each do | opt | %>
					<div class="row">
						<div class="col-xs-4 col-xs-offset-4">
							<p>&#9864&nbsp<%= opt.option_text %></p>
						</div>
					</div>

				<% end %>

				<div class="row">
					<div class="col-xs-3 col-xs-offset-5">
						<%= link_to "Remove Question", multiple_choice_question_path(mc), method: 'delete', data: { confirm: "Are you sure you want to delete" }  %>
					</div>
				</div>


			<% end %>

		<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		<% if @rqs %>
			<% @rqs.each do | q | %>
				<div class="row">
					<div class="col-xs-6 col-xs-offset-3">
						<p><%= q.text %></p>
					</div>
				</div>
			<% end %>
		<% end %>
		</div>
	</div>

