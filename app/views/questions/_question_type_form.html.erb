<div class="row">

	<h5 class="col-xs-12">Add A Question</h5>

</div>

<!-- FORM TAG TO PASS WHICH QUESTION TYPE TO QUESTION CONTROLLER -->

	<%= form_for @survey do | s_fields | %>

		<%= s_fields.fields_for @question do | q_fields | %>

	  <div class='row form-group'>

	  	<%= q_fields.label :question_type, "Select Question Type" %>
	  	<%= q_fields.select :question_type, options_for_select([["Multiple Choice", "mc" ], ["Range", "range"]] ) %>
	  	<%= q_fields.submit :Add_Questions %>

	  </div>

	  <% end %>

	<% end %>
