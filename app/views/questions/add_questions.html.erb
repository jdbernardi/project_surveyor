<%= render  :partial => "new_question", locals: { selecting_options: 'grayed-out', status: "grayed-out" } %>


<div class="row">

	<h5 class='col-xs-12'>Add a Multiple Choice Question:</h5>

	<div class='row'>
		<div class="col-xs-6">1. Select Options</div>
		<div class="col-xs-6">2. Add Question Text</div>
	</div>

	<div class='row'>
		<p class="col-xs-12">How many options should the question have?</p>
	</div>

	<div class="row">
		<%= form_tag(add_mc_survey_questions_path, method: 'post') do %>
		<p class='col-xs-12'>How many options should the question have?</p>
		<%= select_tag "num_options", options_for_select([1,2,3,4,5] ), class: 'col-xs-5' %>

	</div>

	<div class="row">
		<%= hidden_field_tag 'survey_id', @survey.id %>
    <%= hidden_field_tag 'question_id', @question.id %>
    <%= hidden_field_tag 'question_type_id', @question_type.id %>
		<%= submit_tag("Create Question") %>

	</div>

  <% end %>

</div>