
CREATE QUESTIONS

<div class="row">

	<h5 class='col-xs-12'>Add a Multiple Choice Questions:</h5>

	<div class='row'>
		<div class="col-xs-6">1. Select Options</div>
		<div class="col-xs-6">2. Add Question Text</div>
	</div>

</div>

<%= form_for @survey do | survey_fields | %>

	<%= survey_fields.fields_for :question do | question_fields | %>

		<%= question_fields.label :question %>
		<%= question_fields.text_field :text %>

	<% end %>


<%= survey_fields.fields_for :option, Option.new do | option_fields | %>

	<%= option_fields.label :option %>
	<%= option_fields.text_field :option_text %>

	<% end %>

<%= survey_fields.submit %>

<% end %>